{
    "compilerOptions": {
        "baseUrl": "./",
        "outDir": "./dist",
        "target": "ESNext",
        "module": "CommonJS",
        "moduleResolution": "node",
        "moduleDetection": "force",
        "declaration": true,
        "declarationMap": true,
        "esModuleInterop": true,
        "forceConsistentCasingInFileNames": true,
        "strict": true,
        "skipLibCheck": true,
        "paths": {
            "@utils/*": ["src/utils/*"],
            "@prompts/*": ["src/constants/systemPrompts/*"]
        }
    }
}
